@model laba_1.Models.Calc

@{

    Layout = "/Views/Shared/_Layout.cshtml";
}
<div>
    @Html.ActionLink("Duplication", "Duplication")
</div>

<form asp-action="Index">
    <h1 class="display-4">Калькулятор</h1>
    @using (Html.BeginForm("/Index", "calc", FormMethod.Post))
    {
        <div asp-validation-summary="All"></div>
        <p>
            <label asp-for="operand1">Первое число:</label><br />
            <input type="text" asp-for="operand1" />
            <span asp-validation-for="operand1" />
        </p>

        <p>
            <label asp-for="operand2">Второе число:</label><br />
            <input type="text" asp-for="operand2" />
            <span asp-validation-for="operand2" />
        </p>

        <p><label>Знак</label></p>
        @Html.DropDownList("calulate", new MultiSelectList(new string[] { "+", "-", "*", "/" }))
        <p><input type="submit" value="Посчитать" /></p>

        <button name="name" value="delete">Удалить</button>

        <p><label>Результат</label></p>
        <p><input type="operand" asp-for="@ViewData["result"]" /></p>

        <p>Примечание</p>
        <p><input type="operand" asp-for="@ViewData["exception"]" /></p>

    }
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
